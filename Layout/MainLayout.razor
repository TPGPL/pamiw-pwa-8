@inherits LayoutComponentBase
@inject AuthState AuthState

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (!AuthState.IsAuthenticated)
            {
                <NavLink class="ml-md-auto" href="login">
                    Login
                </NavLink>
                <NavLink class="ml-md-auto" href="register">
                    Register
                </NavLink>
            }
            else
            {
                <span class="ml-md-auto">Logged in as <strong>@AuthState.Username</strong></span>
                <NavLink class="ml-md-auto" href="logout">
                    Logout
                </NavLink>
            }

            <NavLink class="ml-md-auto" href="settings">
                Settings
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

    protected override void OnInitialized()
    {
        AuthState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AuthState.OnChange -= StateHasChanged;
    }
}