@inject IStringLocalizer<Resources.AppResources> Loc
@inject ThemeSettings themeSettings

<EditForm Model="book" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="padded-form">
        <div class="form-group">
            <label for="title">@Loc["BookTitle"]</label>
            <InputText id="title" @bind-Value="book.Title" class="@inputClass"></InputText>
        </div>
        <div class="form-group">
            <label for="author">@Loc["BookAuthor"]</label>
            <InputNumber id="author" @bind-Value="book.AuthorID" class="@inputClass"></InputNumber>
        </div>
        <div class="form-group">
            <label for="pub">@Loc["BookPublisher"]</label>
            <InputNumber id="pub" @bind-Value="book.PublisherID" class="@inputClass"></InputNumber>
        </div>
        <div class="form-group">
            <label for="count">@Loc["BookPageCount"]</label>
            <InputNumber id="count" @bind-Value="book.PageCount" class="@inputClass"></InputNumber>
        </div>
        <div class="form-group">
            <label for="relDate">@Loc["BookDate"]</label>
            <InputDate id="relDate" @bind-Value="book.ReleaseDate" class="@inputClass"></InputDate>
        </div>
        <div class="form-group">
            <label for="isbn">@Loc["BookISBN"]</label>
            <InputText id="isbn" @bind-Value="book.ISBN" class="@inputClass"></InputText>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">@Loc["SubmitButton"]</button>
</EditForm>

@code {
    [Parameter]
    public Book book { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

    public string? inputClass;

    protected override void OnInitialized()
    {
        inputClass = themeSettings.CurrentTheme == AppTheme.Dark ? "form-control-dark form-control" : "form-control";
    }
}
