@inject IStringLocalizer<Resources.AppResources> Loc

<EditForm Model="book" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="title">@Loc["BookTitle"]</label>
        <InputText id="title" @bind-Value="book.Title" class="form-control"></InputText>
    </div>
    <div class="form-group">
        <label for="author">@Loc["BookAuthor"]</label>
        <InputNumber id="author" @bind-Value="book.AuthorID" class="form-control"></InputNumber>
    </div>
    <div class="form-group">
        <label for="pub">@Loc["BookPublisher"]</label>
        <InputNumber id="pub" @bind-Value="book.PublisherID" class="form-control"></InputNumber>
    </div>
    <div class="form-group">
        <label for="count">@Loc["BookPageCount"]</label>
        <InputNumber id="count" @bind-Value="book.PageCount" class="form-control"></InputNumber>
    </div>
    <div class="form-group">
        <label for="relDate">@Loc["BookDate"]</label>
        <InputDate id="relDate" @bind-Value="book.ReleaseDate" class="form-control"></InputDate>
    </div>
    <div class="form-group">
        <label for="isbn">@Loc["BookISBN"]</label>
        <InputText id="isbn" @bind-Value="book.ISBN" class="form-control"></InputText>
    </div>
    <button type="submit" class="btn btn-primary">@Loc["SubmitButton"]</button>
</EditForm>

@code {
    [Parameter]
    public Book book { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}
