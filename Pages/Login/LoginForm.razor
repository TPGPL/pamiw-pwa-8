@inject IStringLocalizer<Resources.AppResources> Loc

<EditForm Model="user" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="name">@Loc["UsernamePlaceholder"]</label>
        <InputText id="name" @bind-Value="user.Username" class="form-control"></InputText>
    </div>
    <div class="form-group">
        <label for="pass">@Loc["PasswordPlaceholder"]</label>
        <InputText type="password" id="pass" @bind-Value="user.Password" class="form-control"></InputText>
    </div>
    <div class="form-group">
        <label for="cpass">@Loc["ConfirmPasswordPlaceholder"]</label>
        <InputText type="password" id="cpass" @bind-Value="user.ConfirmPassword" class="form-control"></InputText>
    </div>
    <button type="submit" class="btn btn-primary mt-3">@Loc["LoginButton"]</button>
</EditForm>

@code {
    [Parameter]
    public UserLogin user { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}
